{
  "name": "workout",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "concurrently --kill-others --prefix-colors \"cyan,magenta\" --names \"DB,APP\" \"npm run db:up\" \"npm run dev:next\"",
    "dev:next": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && npm run dev",
    "db:up": "docker-compose up",
    "db:down": "docker-compose down",
    "db:clean": "docker-compose down -v && docker-compose up",
    "clean": "rm -rf .next && npm run db:down",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "cross-env NODE_OPTIONS=--no-deprecation tsc --noEmit",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "npm run test:int && npm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation\" npx playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "test:watch": "cross-env NODE_OPTIONS=--no-deprecation vitest --config ./vitest.config.mts",
    "test:coverage": "cross-env NODE_OPTIONS=--no-deprecation vitest run --coverage --config ./vitest.config.mts",
    "commitlint": "commitlint --edit",
    "update-deps": "ncu --interactive",
    "update-deps:check": "ncu",
    "update-deps:patch": "ncu --target patch --interactive",
    "update-deps:minor": "ncu --target minor --interactive",
    "update-deps:major": "ncu --target major --interactive"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "3.54.0",
    "@payloadcms/next": "3.54.0",
    "@payloadcms/payload-cloud": "3.54.0",
    "@payloadcms/richtext-lexical": "3.54.0",
    "@payloadcms/ui": "3.54.0",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.11.0",
    "next": "^15.5.2",
    "payload": "3.54.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "0.34.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "1.55.0",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.2",
    "jsdom": "26.1.0",
    "lefthook": "^1.12.3",
    "npm-check-updates": "^18.0.3",
    "playwright": "1.55.0",
    "playwright-core": "1.55.0",
    "prettier": "^3.6.2",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
